<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème de base de l'application -->
    <style name="Theme.TrackingSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleurs de la marque primaire. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Couleurs de la marque secondaire. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Couleur de la barre de statut. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Personnalisation du thème. -->
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!-- Style pour les CardView de l'application. -->
    <style name="CardViewStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:background">@color/card_background</item>
    </style>

    <!-- Style pour les boutons. -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Style pour les EditText. -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Styles ajoutés pour la zone de chat -->
    <style name="ChatInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorEditTextBackground</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

    <style name="ChatInputTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:hint">@string/prompt_ia_chat_hint</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/white</item>
        <item name="iconSize">24dp</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".Esp32CamActivity">

    <!-- Vue pour afficher le flux vidéo en direct de l'ESP32-CAM -->
    <ImageView
        android:id="@+id/livePreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="Aperçu de la caméra ESP32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Couche pour les boutons de contrôle -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/modeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode ESP32-CAM"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ipAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecté à 192.168.1.100"
            android:textColor="#A0A0A0"
            android:textSize="16sp" />

        <!-- Bouton pour démarrer ou arrêter le scan -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="Lancer le Scan QR"
            android:textColor="#FFFFFF"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_qr_code"
            app:iconGravity="textStart" />

        <!-- Bouton pour le flash -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/flashButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF9800"
            android:text="Flash OFF"
            android:textColor="#FFFFFF"
            app:cornerRadius="24dp" />

        <!-- Indicateur de progression du scan -->
        <ProgressBar
            android:id="@+id/scanProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Carte d'état du pointage -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:contentPadding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_check_circle"
                app:tint="#4CAF50" />

            <TextView
                android:id="@+id/statusEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nom Prénom"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Arrivée enregistrée"
                android:textColor="#757575"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/statusTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="08:00"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
